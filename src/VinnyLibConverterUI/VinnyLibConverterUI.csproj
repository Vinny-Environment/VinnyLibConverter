<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFrameworks>net48;net6.0-windows;net8.0-windows</TargetFrameworks>
      <OutputPath>$(SolutionDir)..\VinnyLibBin\$(Configuration)\ui</OutputPath>
      <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
      <AppendRuntimeIdentifierToOutputPath>true</AppendRuntimeIdentifierToOutputPath>
      <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
      <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\vinnyIcon_32x32.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\vinnyIcon_32x32.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
    
  <ItemGroup>
      <ProjectReference Include="..\VinnyLibConverterCommon\VinnyLibConverterCommon.csproj">
          <Private>False</Private>
          <CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
      </ProjectReference>
  </ItemGroup>
    
  <ItemGroup>
    <None Update="Resources\affine.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\vinnyIcon_512x512.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
